@model IEnumerable<GerenciamentoFuncionarios.Models.Funcionario>

@{
    ViewData["Title"] = "Index";
}

<h4>Registro de funcionário</h4>
<hr />

<table class="table table-hover">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.NomeCompleto)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Codigo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Posicao)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LocalizacaoEscritorio)
            </th>
            <th>
                <a asp-action="AdicionarOuEditar" class="btn btn-outline-success"><i class="far fa-plus-square"></i> Funcionário</a>
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.NomeCompleto)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Codigo)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Posicao)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LocalizacaoEscritorio)
                </td>
                <td>
                    <a asp-action="AdicionarOuEditar" asp-route-id="@item.Id"><i class="fa fa-marker fa-lg"></i></a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="text-danger ml-1" onclick="return confirm('Tem certeza que deseja excluir este registro?')"><i class="fa fa-trash-alt fa-lg"></i></a>
                </td>
            </tr>
        }
    </tbody>
</table>
